{
    // Refer to this link https://github.com/neoclide/coc.nvim/blob/master/data/schema.json
    "diagnostic.level": "hint",
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "",
    "diagnostic.enableMessage": "jump",
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextPrefix": "        ",
    "snippets.extends": {
        "javascript": [
            "html",
            "javascript-react"
        ]
    },
    "session.saveOnVimLeave": false,
    "signature.target": "echo",
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "javascript",
        "graphql",
        "html",
        "yaml",
        "json",
        "python",
        "java",
        "javascriptreact"
    ],
    // python
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/vim_venv/bin/black",
    // Lua
    "sumneko-lua.enableNvimLuaDev": true,
    "sumneko-lua.checkUpdate": false,
    "Lua.telemetry.enable": false,
    "Lua.window.statusBar": false,
    "Lua.hint.enable": false,
    "list.source.files.excludePatterns": [
        "**/venv/**",
        "**/node_modules/**",
        "**/node_modules/**/.*",
        "**/node_modules/**/.*/**",
        "**/.git/**"
    ],
    "list.source.files.args": [
        "--hidden",
        "--files"
    ],
    "list.source.grep.excludePatterns": [
        "**/venv/**",
        "**/.git/**"
    ],
    //suggest
    "coc.source.around.enable": false, // disables buffer, file and around completion
    "suggest.noselect": true,
    "suggest.formatItems": [
        "abbr",
        "kind"
    ],
    "suggest.floatConfig": {
        "border": true,
        "rounded": true,
        "highlight": "CocCustomPopup",
        "borderhighlight": "CocCustomPopupBoder"
    },
    "suggest.completionItemKindLabels": {
        "keyword": "\uf1de Keyword  ",
        "variable": "\ue79b Variable ",
        "value": "\uf89f Value    ",
        "operator": "\u03a8 Operator ",
        "function": "\u0192 Function ",
        "reference": "\ufa46 Reference",
        "constant": "\uf8fe Constant ",
        "method": "\uf09a Method   ",
        "struct": "\ufb44 Struct   ",
        "class": "\uf0e8 Class    ",
        "interface": "\uf417 Interface",
        "text": "\ue612 Text     ",
        "enum": "\uf435 Enum     ",
        "enumMember": "\uf02b EnumMember",
        "module": "\uf40d Module   ",
        "color": "\ue22b Color    ",
        "property": "\ue624 Property ",
        "field": "\uf9be Field    ",
        "unit": "\uf475 Unit     ",
        "event": "\ufacd Event    ",
        "file": "\uf723 File     ",
        "folder": "\uf114 Folder   ",
        "snippet": "\ue60b Snippet  ",
        "typeParameter": "\uf728 TypeParameter",
        "default": "\uf29c Default"
    }
}
